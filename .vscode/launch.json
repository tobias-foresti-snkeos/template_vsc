    "version": "0.2.0",
    "configurations": [
        {
            "name": "print message",
            "type": "python",
            "request": "launch",
            "program": "src/template.py",
            "args": [ 
                "-i", "Hello! Is it me you are looking for"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "print message with stars",
            "type": "python",
            "request": "launch",
            "program": "src/template.py",
            "args": [ 
                "-i", "Hello! Is it me you are looking for", "-s"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "print message with dashes",
            "type": "python",
            "request": "launch",
            "program": "src/template.py",
            "args": [ 
                "-i", "Hello! Is it me you are looking for", "-d"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "print message with dashes and stars",
            "type": "python",
            "request": "launch",
            "program": "src/template.py",
            "args": [ 
                "-i", "Hello! Is it me you are looking for", "-s", "-d"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
    ]
}