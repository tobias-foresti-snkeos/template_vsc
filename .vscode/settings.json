{
    // Virtualenv
    // "python.defaultInterpreterPath": "/home/foresti/.virtualenvs/venv_test/bin/python",
    "python.defaultInterpreterPath": "C:\\github\\temp\\py\\template_vsc\\venv\\Scripts\\python.exe",

    "python.envFile": "${workspaceFolder}/.env",
    // test settings
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,

    // formatting
    // sort imports with ctr+shift+p -> sort imports
    "python.formatting.provider": "black",
    "editor.defaultFormatter": "ms-python.python",
    "python.formatting.blackArgs": ["--experimental-string-processing", "--line-length=120"],
    "editor.formatOnSave": false,

    //linting
    "python.linting.enabled": true,
    "python.linting.lintOnSave": true,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": ["--config=${workspaceFolder}/config/.flake8"],
    "python.linting.pylintEnabled": true,
    "python.linting.pylintArgs": ["--disable=c0103", "--max-line-length=120"],

    
    //editor
    "editor.rulers": [119],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,

    // docstrings
    "autoDocstring.docstringFormat": "numpy",

    // exclude files from sidebar
    "files.exclude": {
        "**/.pytest_cache/": true,
        "**/__pycache__": true,
        ".idea/": true
    },


}